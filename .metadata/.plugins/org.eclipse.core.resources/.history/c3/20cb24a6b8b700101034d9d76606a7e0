  * @file           : usbd_cdc_if.h
  * @version        : v2.0_Cube
  * @brief          : Header for usbd_cdc_if.c file.
  ******************************************************************************
  */
/* USER CODE END Header */

/* Define to prevent recursive inclusion -------------------------------------*/
#ifndef __USBD_CDC_IF_H__
#define __USBD_CDC_IF_H__

#ifdef __cplusplus
 extern "C" {
#endif

/* Includes ------------------------------------------------------------------*/
#include "usbd_cdc.h"
#include "usbd_def.h"
#include <stdint.h>

/* Define size for the receive and transmit buffer over CDC */
#define APP_RX_DATA_SIZE  1024
#define APP_TX_DATA_SIZE  1024

/* CDC Interface callback. */
extern USBD_CDC_ItfTypeDef USBD_Interface_fops_FS;

/* Standard API used by application to send data */
uint8_t CDC_Transmit_FS(uint8_t* Buf, uint16_t Len);

/* Exported helpers (added) */
/* Service the TX queue from main loop: call periodically in main() */
void    CDC_ProcessTxQueue(void);

/* Enqueue a transmit buffer into the TX queue (non-blocking).
   Returns 0 on success, -1 if queue is full. */
int     CDC_Transmit_Enqueue(uint8_t* Buf, uint16_t Len);

#ifdef __cplusplus
}
#endif

#endif /* __USBD_CDC_IF_H__ */
